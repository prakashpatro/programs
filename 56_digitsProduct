int solution(int product) {
int i, a[10], j=0, num=0, count;
if(product == 0)
return 10;
while(product>9)
{
    count=0;
    for(i=9; i>=2; i--)
    {
        if(product%i==0)
        {
            count++;
            a[j]=i;
            product=product/i;
            j++;
            break;  
        }
    }
    if(count==0)  
    break;  
}
num=product;
for(i=j-1; i>=0; i-- )
num = num*10 + a[i];
if(product>9)
return -1;

return num;
}
